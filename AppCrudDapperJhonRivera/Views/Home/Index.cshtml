@model IEnumerable<ClienteModel>
@{
    ViewData["Title"] = "Clientes";
}

<div class="text-center">
    <h1 class="display-4">Clientes</h1>
   <table class="table table-striped">
  <thead>
    <tr>
      <th scope="col">Nro Documento</th>
      <th scope="col">Nombre</th>
      <th scope="col">Dirección</th>
      <th scope="col">Teléfono</th>
      <th scope="col">Observacion</th>
      <th scope="col">Eliminar</th>

  
    </tr>
  </thead>
  <tbody>
      @foreach (var item in Model)
        {
            <tr>
                <td>@Html.ActionLink(item.NroDocumento, "edit", new { id = item.IdCliente})</td>
                <td>@item.Nombre</td>
                <td>@item.Direccion</td>
                <td>@item.Telefono</td>
                <td>@item.Observacion</td>
                <td>
                 @Html.ActionLink("Eliminar","delete", new {id = item.IdCliente})
             
                    </td>
            </tr>
        }
  
  </tbody>
</table>

<div class="mt-5">
    <div class="card bg-dark text-white mb-3">
  <h5 class="card-header">Dapper</h5>
  <div class="card-body">
    <h5 class="card-title">¿Qué es Dapper?</h5>
    <p class="card-text">Es un micro ORM para .NET. Mantenido por el equipo de StackOverFlow</p>
    <a href="https://github.com/jhonbriveram" class="btn btn-success">Mi Git Hub</a>
  </div>
</div>
</div>
</div>
